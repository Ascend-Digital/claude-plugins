{
  "mcpServers": {
    "github-readonly": {
      "command": "github-mcp-server",
      "args": [
        "stdio",
        "--read-only",
        "--toolsets=repos,issues,pull_requests"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "allowedTools": [
        "get_file_contents",
        "search_repositories",
        "search_code",
        "list_branches",
        "list_commits",
        "get_commit",
        "get_repository",
        "list_repository_files",
        "get_issue",
        "list_issues",
        "search_issues",
        "get_issue_comments",
        "get_pull_request",
        "list_pull_requests",
        "get_pull_request_files",
        "get_pull_request_diff",
        "get_pull_request_comments",
        "get_pull_request_reviews",
        "list_tags",
        "list_releases",
        "get_release"
      ]
    }
  }
}